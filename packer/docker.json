{
    "variables": {
        "region":         "eu-central-1"
    },
    "builders": [
        {
            "ami_name": "my-docker-{{timestamp}}",
            "source_ami": "ami-07f1fbbff759e24dd",
            "instance_type": "m5.large",
            "region": "{{user `region`}}",
            "ssh_username": "ec2-user",
            "type": "amazon-ebs",
            "tags": {
                "owner": "alex",
                "purpose": "demo"
            }
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./welcome.txt",
            "destination": "/home/ec2-user/"
        },
        {
            "type": "shell",
            "inline":[
                "ls -al /home/ec2-user",
                "cat /home/ec2-user/welcome.txt"
            ]
        },
        {
            "type": "shell",
            "script": "./provision.sh"
        }
    ]
}